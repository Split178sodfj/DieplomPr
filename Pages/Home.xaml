<Page x:Class="WPFUIKitProfessional.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFUIKitProfessional.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home" FontFamily="Poppins">

    <Border CornerRadius="8" Background="{DynamicResource SecundaryBackgroundColor}">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Current Time:" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}" Margin="0,0,10,0" />
            <TextBlock x:Name="TimeTextBlock" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}" />
        </StackPanel>
    </Border>
</Page>
